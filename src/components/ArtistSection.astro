---
import { Image } from "astro:assets";

const { artist } = Astro.props;
---

<section class="artist-section py-20 bg-black text-white">
  <div class="container mx-auto px-4">
    <div
      class="md:flex md:items-center md:space-x-8 p-8 rounded-lg bg-black/20 backdrop-blur-lg border border-white/10 liquid-glass"
    >
      <div class="md:w-1/3 mb-8 md:mb-0">
        <h3 class="text-3xl font-bold mb-4">{artist.name}</h3>
        <p class="text-gray-300 mb-6">{artist.bio}</p>
        <a
          href={artist.gallery_link}
          class="text-white font-bold hover:underline"
          >View Full Gallery</a
        >
      </div>
      <div class="md:w-2/3">
        <div class="grid grid-cols-3 gap-4">
          {
            artist.images.map((image) => (
              <div class="overflow-hidden rounded-lg">
                <Image
                  src={image}
                  alt={`${artist.name}'s work`}
                  width={400}
                  height={400}
                  class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-300"
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
