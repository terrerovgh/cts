---
const {} = Astro.props;
---

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.utils.toArray(".artist-section").forEach((section, i) => {
      gsap.from(section, {
        opacity: 0,
        y: 100,
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      });
    });

    gsap.from("#services", {
      opacity: 0,
      y: 100,
      scrollTrigger: {
        trigger: "#services",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reverse",
      },
    });

    gsap.from("#gallery", {
      opacity: 0,
      y: 100,
      scrollTrigger: {
        trigger: "#gallery",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reverse",
      },
    });

    gsap.from("#contact", {
      opacity: 0,
      y: 100,
      scrollTrigger: {
        trigger: "#contact",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>
