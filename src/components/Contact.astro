---
const {} = Astro.props;
---

<section id="contact" class="py-20 bg-black text-white">
  <div class="container mx-auto px-4">
    <div
      class="max-w-2xl mx-auto p-8 rounded-lg bg-black/20 backdrop-blur-lg border border-white/10 liquid-glass"
    >
      <h2 class="text-4xl font-bold text-center mb-8">Contact & Bookings</h2>
      <form action="#" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-gray-300 mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full p-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white"
          />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-300 mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full p-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white"
          />
        </div>
        <div class="mb-4">
          <label for="message" class="block text-gray-300 mb-2"
            >Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full p-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white"
          ></textarea>
        </div>
        <div class="text-center">
          <button
            type="submit"
            class="bg-white text-black font-bold py-3 px-8 rounded-full hover:bg-gray-300 transition-colors duration-300"
            >Send Message</button
          >
        </div>
      </form>
    </div>
  </div>
</section>
