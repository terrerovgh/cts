---
import { Image } from "astro:assets";

const galleryImages = [
  "/images/gallery-1.jpg",
  "/images/gallery-2.jpg",
  "/images/gallery-3.jpg",
  "/images/gallery-4.jpg",
  "/images/gallery-5.jpg",
  "/images/gallery-6.jpg",
];
---

<section id="gallery" class="py-20 bg-black text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Studio Gallery</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {
        galleryImages.map((image) => (
          <div class="overflow-hidden rounded-lg">
            <Image
              src={image}
              alt="Tattoo work from the studio"
              width={600}
              height={600}
              class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-300"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
